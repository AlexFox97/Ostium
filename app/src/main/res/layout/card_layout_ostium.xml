<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/component_padding"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp"
    app:cardBackgroundColor="@color/colorBase1"
    >
    <!--android:layout_marginStart="8dp"-->
    <!--android:layout_marginTop="8dp"-->
    <!--android:layout_marginEnd="8dp"-->


    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_edge"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/component_padding"
            android:layout_marginEnd="@dimen/component_padding"
            android:layout_marginBottom="@dimen/component_padding"
            android:maxLines="4"
            app:layout_constraintBottom_toTopOf="@+id/details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Buy Almond milk, bread and bananas"
            />

        <TextView
            android:id="@+id/details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/component_padding"
            android:layout_marginTop="@dimen/component_padding"
            android:layout_marginEnd="@dimen/component_padding"
            android:maxLines="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="get gluten free bread!!"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/component_padding"
            android:layout_marginTop="@dimen/component_padding"
            android:layout_marginEnd="@dimen/component_padding"
            android:layout_marginBottom="@dimen/component_padding"
            android:drawableLeft="@drawable/ic_drawer"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details"
            tools:text="03/12/2018"
            />

        <Button
            android:id="@+id/right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/component_padding"


            android:layout_marginEnd="@dimen/component_padding"
            android:layout_marginBottom="@dimen/component_padding"
            android:minWidth="10dp"
            android:minHeight="10dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/date"
            app:layout_constraintTop_toTopOf="@+id/date"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tagList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/component_padding"
            android:layout_marginTop="@dimen/component_padding"
            android:layout_marginEnd="@dimen/component_padding"
            android:minHeight="16dp"
            android:scrollbars="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="0"
            tools:listitem="@layout/location_tag_layout"
            />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>