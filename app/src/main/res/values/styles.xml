<resources>

    <!--Themes-->
    <style name="Theme.Ostium" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:colorPrimary">@color/primary1</item>
        <item name="android:colorPrimaryDark">@color/primary_dark1</item>
        <item name="android:colorAccent">@color/accent1</item>
        <item name="android:textColorPrimary">@color/primary_text1</item>
        <item name="android:textColorSecondary">@color/secondary_text1</item>
        <item name="android:icon">@color/icons1</item>
        <item name="android:divider">@color/divider1</item>
        <item name="navigationViewStyle">@style/Widget.Design.NavigationView</item>
        <item name="android:colorForeground">@color/accent1</item>

    </style>

    <style name="Theme.Ostium_Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:colorPrimary">@color/primary2</item>
        <item name="android:colorPrimaryDark">@color/primary_dark2</item>
        <item name="android:colorAccent">@color/accent2</item>
        <item name="android:textColorPrimary">@color/primary_text2</item>
        <item name="android:textColorSecondary">@color/secondary_text2</item>
        <item name="android:icon">@color/icons2</item>
        <item name="android:divider">@color/divider2</item>
        <item name="colorAccent">@color/accent1</item>
        <!---->
